{
  "name": "verb-generate-readme",
  "description": "Generate your project's readme with verb. Requires verb v0.9.0 or higher.",
  "version": "0.7.0",
  "homepage": "https://github.com/verbose/verb-generate-readme",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "contributors": [
    "arrowrowe (http://arrowrowe.me)",
    "Brian Woodward (https://twitter.com/doowb)",
    "Charlike Mike Reagent (https://i.am.charlike.online)",
    "Ivan Erceg (softwaremarbles.com)",
    "Jon Schlinkert (http://twitter.com/jonschlinkert)"
  ],
  "repository": "verbose/verb-generate-readme",
  "bugs": {
    "url": "https://github.com/verbose/verb-generate-readme/issues"
  },
  "license": "MIT",
  "files": [
    ".verbrc.json",
    "generator.js",
    "index.js",
    "lib",
    "templates"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=5.0"
  },
  "scripts": {
    "test": "mocha"
  },
  "dependencies": {
    "arr-diff": "^4.0.0",
    "assemble-handle": "^0.1.4",
    "async-each": "^1.0.1",
    "camel-case": "^3.0.0",
    "debug": "^3.1.0",
    "delete": "^1.1.0",
    "engine-handlebars": "^0.8.2",
    "fs-exists-sync": "^0.1.0",
    "get-value": "^3.0.1",
    "gfm-code-blocks": "^1.0.0",
    "git-branch": "^2.0.1",
    "gulp-reflinks": "^1.0.0",
    "has-value": "^2.0.2",
    "is-valid-app": "^0.3.0",
    "lazy-cache": "^2.0.2",
    "log-utils": "^0.2.1",
    "markdown-toc": "^1.2.0",
    "match-file": "^1.0.0",
    "micromatch": "^3.1.10",
    "mixin-deep": "^1.3.1",
    "object.pick": "^1.3.0",
    "template-helpers": "^0.6.7",
    "through2": "^2.0.3",
    "update-sections": "^0.1.2",
    "verb-collections": "^0.1.5",
    "verb-defaults": "^0.3.0",
    "verb-repo-data": "^0.1.15",
    "verb-repo-helpers": "^1.0.0",
    "verb-toc": "^0.2.9"
  },
  "devDependencies": {
    "generate": "^0.14.0",
    "global-modules": "^1.0.0",
    "gulp-format-md": "^1.0.0",
    "mocha": "^5.2.0"
  },
  "keywords": [
    "api docs",
    "code comments",
    "docs",
    "documentation",
    "generate",
    "generator",
    "jsdoc",
    "markdown",
    "plugin",
    "readme",
    "template",
    "templates",
    "verb",
    "verb-generator",
    "verbgenerator",
    "verbplugin"
  ],
  "lintDeps": {
    "files": {
      "dependencies": [
        "generator.js"
      ]
    }
  },
  "verb": {
    "toc": {
      "render": true,
      "method": "preWrite",
      "collapsible": true,
      "maxdepth": 4
    },
    "layout": "common-minimal",
    "tasks": [
      "readme"
    ],
    "middleware": {
      "prePipeline": [
        {
          "name": "verb-reflinks",
          "match": "*.md"
        }
      ]
    },
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "highlight": "generate",
      "list": [
        "assemble",
        "generate",
        "update",
        "verb",
        "verb-collections",
        "verb-repo-data",
        "verb-toc"
      ]
    },
    "sections": false,
    "lint": {
      "reflinks": true
    }
  }
}
